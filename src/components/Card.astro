---
const { title, content } = Astro.props as { title: string; content: string[] };
---
<div class="w-full md:w-[400px] p-6 bg-white shadow-lg rounded-lg text-left flex flex-col items-start">
  <h3 class="text-xl font-bold text-[#003d26] mb-4">{title}</h3>
  <ul class="list-disc list-inside text-gray-700 space-y-2">
    {content.map((item: string) => (
      <li>{item}</li>
    ))}
  </ul>
</div>


